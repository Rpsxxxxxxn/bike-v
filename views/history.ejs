<div class="mx-auto pt-3 px-3" style="max-width: 700px;">
  <div class="mb-3">
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <select class="form-select form-select" aria-label="メーカー">
        <option selected>メーカー</option>
        <option value="1">その1</option>
        <option value="2">その2</option>
        <option value="3">その3</option>
      </select>
      <select class="form-select form-select" aria-label="モデル">
        <option selected>モデル</option>
        <option value="1">その1</option>
        <option value="2">その2</option>
        <option value="3">その3</option>
      </select>
      <select class="form-select form-select" aria-label="メンテナンス内容">
        <option selected>メンテナンス内容</option>
        <option value="1">その1</option>
        <option value="2">その2</option>
        <option value="3">その3</option>
      </select>
    </div>
  </div>
  <hr>
  <% dataList.forEach((data) => { %>
    <div class="card border-primary mb-3">
      <div class="row g-0">
        <div class="card-header">
          <b><%= data.bike_name %> <%= data.title %></b>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <p class="card-text">
              <%= data.description %>
            </p>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><b>走行距離(km)</b> <%= String(data.odo).replace( /(\d)(?=(\d\d\d)+(?!\d))/g, '$1,')%></li>
              <li class="list-group-item"><b>金額(¥)</b> <%= String(data.price).replace( /(\d)(?=(\d\d\d)+(?!\d))/g, '$1,') %></li>
              <li class="list-group-item"><b>メンテナンス日付</b> <small class="text-body-secondary"><%= data.date %></small></li>
            </ul>
          </div>

        </div>
        <div class="card-footer text-body-secondary">
          <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/history/update/<%= data.id %>" class="btn btn-primary">編集</a>
            <a href="/history/delete/<%= data.id %>" class="btn btn-danger">削除</a>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
</div>