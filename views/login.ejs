
<form action="/user/login" method="POST">
  <div class="card mx-auto my-5" style="max-width: 700px;">
    <div class="px-3 py-3">
      <div class="mb-3">
        <label for="email" class="form-label">メールアドレス <span class="badge bg-danger">必須</span></label>
        <input type="text" class="form-control" name="email" value="" required></input>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">パスワード <span class="badge bg-danger">必須</span></label>
        <input type="password" class="form-control" name="password" value="" required></input>
      </div>
      <div class="mb-3">
        <a href="/user/register">新規登録はこちら</a>
      </div>
      <div class="d-grid gap-2 col-6 mx-auto">
        <button type="submit" class="btn btn-primary">ログイン</button>
      </div>
    </div>
  </div>
</form>