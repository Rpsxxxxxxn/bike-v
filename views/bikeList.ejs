<a href="/bike/register">車体の追加</a>
<div class="mx-auto my-5 px-3" style="max-width: 700px">
  <% bikeList.forEach((data)=> { %>
    <form action="/bike/have/register/<%= data.id %>" method="POST">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">
            <%= data.company %>
              <%= data.name %>
          </h5>

          <ul class="list-group list-group-flush">
            <li class="list-group-item"><b>モデル</b> <%= data.model %></li>
            <li class="list-group-item"><b>排気量</b> <%= data.cc %>cc</li>
            <li class="list-group-item"><b>オイル交換時</b> <%= data.oilChange %>L</li>
            <li class="list-group-item"><b>フィルタ交換時</b> <%= data.oilFilter %>L</li>
            <li class="list-group-item"><a href='<%= data.bodyLink %>' target="_blank" rel="noopener noreferrer">車体公式サイト</a></li>
            <li class="list-group-item"><b>納車日</b> <input name="date" type="date" class="form-control"/></li>
          </ul>
        </div>
        <div class="card-footer">
          <button type="submit" class="btn btn-primary">保有している車体に追加</button>
        </div>
      </div>
    </form>
  <% }) %>
</div>